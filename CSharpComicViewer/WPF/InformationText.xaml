<Window x:Class="CSharpComicViewer.WPF.InformationText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="486"
        Width="641" 
        Title="Information Text" 
        Icon="/csharp-comicviewer;component/icon.ico" 
        ResizeMode="NoResize" 
        AllowsTransparency="False" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="ToolWindow" 
        Name="InformationTextWindow" 
        Topmost="False">

	<Grid DataContext="{Binding ElementName=InformationTextWindow, Path=.}" IsManipulationEnabled="True" ShowGridLines="False">
		<TextBox Name="Information_TextBox" Margin="0,0,0,41" IsReadOnly="True" IsEnabled="True" TextWrapping="WrapWithOverflow" 
                 Padding="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
        <Button IsDefault="True" Focusable="True" Content="Close" Height="23" HorizontalAlignment="Left" Margin="552,432,0,0" 
                Name="Close_btn" VerticalAlignment="Top" Width="75" Click="Close_Click"/>
    </Grid>
</Window>
