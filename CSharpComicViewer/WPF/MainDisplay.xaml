<Window
	x:Class="CSharpComicViewer.WPF.MainDisplay" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpf="clr-namespace:CSharpComicViewer.WPF"
    Title="C# comicviewer"
	Background="WhiteSmoke"
	Height="300"
	Width="300"
	Name="Display"
	FocusVisualStyle="{x:Null}"
	Loaded="MainDisplay_Loaded"
	KeyDown="OnKeyDown"
	PreviewMouseWheel="OnPreviewMouseWheel"
	MouseWheel="OnMouseWheel"
	Closing="ApplicationExit"
	MouseMove="OnMouseMove"
	PreviewKeyDown="OnPreviewKeyDown" 
    WindowState="Maximized" 
    WindowStyle="None" 
    MouseRightButtonDown="OnRightButtonDown" 
    Icon="/csharp-comicviewer;component/icon.ico" 
    ResizeMode="NoResize">
	<Grid>
		<DockPanel>
			<Menu Name="MenuBar" VerticalAlignment="Top" Visibility="Collapsed" DockPanel.Dock="Top" >
				<MenuItem Header="File">
					<MenuItem Header="Resume last file(s)" InputGestureText="R" Name="ResumeFile_MenuBar" Click="Resume_Click" />
					<MenuItem Header="Load file(s)" InputGestureText="L" Click="Load_Click" />
					<MenuItem Header="Next file" InputGestureText="Alt + Pg Dn" Click="NextFile_Click" />
					<MenuItem Header="Previous file" InputGestureText="Alt + Pg Up" Click="PreviousFile_Click" />
                    <MenuItem Header="Show Text" InputGestureText="N" Click="DoShowText"></MenuItem>
                    <wpf:RecentFileList x:Name="MyRecentFileList"/>
					<MenuItem Header="Exit" InputGestureText="X" Click="Exit_Click" />
				</MenuItem>
				<MenuItem
				Header="Page Control">
					<MenuItem
					Header="Next page"
					InputGestureText="Pg Dn"
					Name="NextPage_MenuBar"
					Click="NextPage_Click" />
					<MenuItem
					Header="Previous page"
					InputGestureText="Pg Up"
					Name="PreviousPage_MenuBar"
					Click="PreviousPage_Click" />
					<MenuItem
					Header="Show page information"
					InputGestureText="I"
					Name="ShowPageInformation_MenuBar"
					Click="ShowPageInformation_Click" />
				</MenuItem>
				<MenuItem
				Header="Bookmarks"
				Name="Bookmarks_MenuBar">
					<MenuItem
					Header="Add bookmark"
					Name="AddBookmark_MenuBar"
					Click="AddBookmark_Click" />
					<MenuItem
					Header="Manage bookmarks"
					Name="ManageBookmarks_MenuBar"
					Click="ManageBookmarks_Click" />
					<Separator />
				</MenuItem>
				<MenuItem Header="About" Click="About_Click" />
			</Menu>

            <!-- These do NOT work for windowed mode, and don't appear to be necessary in full screen mode
            Width="{Binding ActualWidth, ElementName=Display, Mode=OneWay}" 
			Height="{Binding ActualHeight, ElementName=Display, Mode=OneWay}" >-->

            <ScrollViewer
			VerticalScrollBarVisibility="Hidden"
			HorizontalScrollBarVisibility="Hidden"
			Name="ScrollField"
			FocusVisualStyle="{x:Null}">
                <Image
				VerticalAlignment="Top"
				Name="DisplayedImage"
				Focusable="False"
				FocusVisualStyle="{x:Null}" />
			</ScrollViewer>
		</DockPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <!-- TODO AutoGenerateColumns seems to activate RowValidationError column, and I canna turn it off... -->
        <DataGrid 
            RowValidationErrorTemplate="{x:Null}"
            Name="KeyGrid" 
            IsReadOnly="True"
            VerticalAlignment="Center"
            AutoGenerateColumns="True"  
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            CanUserSortColumns="False"
            CanUserResizeRows="False"
            />
            
        </StackPanel>

        <Grid x:Name="leftNav"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Margin="0,25,0,25"
                Width="50"
                Panel.ZIndex="59"
                Opacity="0.01"                
                MouseEnter="LeftNav_MouseEnter"
                MouseLeave="LeftNav_MouseLeave"
                MouseDown="LeftNav_MouseDown"
                Background="LightGray"
              >
            <Image Height="40" Stretch="Uniform"  Width="40" Source="/csharp-comicviewer;component/left-arrow.png" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        <Grid x:Name="rightNav"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Margin="0,25,0,25"
                Width="50"
                Panel.ZIndex="60"
                Opacity="0.01"                
                MouseEnter="RightNav_MouseEnter"
                MouseLeave="RightNav_MouseLeave"
                MouseDown="RightNav_MouseDown"
                Background="LightGray"
              >
            <Image Stretch="Uniform" Height="40" Width="40" Source="/csharp-comicviewer;component/right-arrow.png"/>
        </Grid>

        <TextBlock
			Name="MessageBox"
			Visibility="Hidden"
			Background="Black"
			Height="40"
			FontSize="30"
			Foreground="White"
			TextAlignment="Center"
			VerticalAlignment="Center"
			Focusable="False" 
			Panel.ZIndex="50" />
		<TextBlock
			Name="PageInfoBox"
			Visibility="Hidden"
			Background="LightGray"
			VerticalAlignment="Bottom"
			HorizontalAlignment="Right"
			MinHeight="30"
			MinWidth="60"
			Padding="5,2,5,2"
			FocusVisualStyle="{x:Null}"
			Focusable="False" 
			Panel.ZIndex="50" />

        <Grid.ContextMenu>
			<ContextMenu
				Name="MenuRightClick">
				<MenuItem
					Header="Resume last file(s)"
					InputGestureText="R"
					Name="ResumeFile_RightClick"
					Click="Resume_Click" />
				<MenuItem
					Header="Load file(s)"
					InputGestureText="L"
					Name="LoadFile_RightClick"
					Click="Load_Click" />
				<MenuItem
					Header="Next page"
					InputGestureText="Pg Dn"
					Name="NextPage_RightClick"
					Click="NextPage_Click" />
				<MenuItem
					Header="Previous page"
					InputGestureText="Pg Up"
					Name="PreviousPage_RightClick"
					Click="PreviousPage_Click" />
				<MenuItem
					Header="Next file"
					InputGestureText="Alt + Pg Dn"
					Name="NextFile_RightClick"
					Click="NextFile_Click" />
				<MenuItem
					Header="Previous file"
					InputGestureText="Alt + Pg Up"
					Name="PreviousFile_RightClick"
					Click="PreviousFile_Click" />
				<MenuItem
					Header="Bookmarks"
					Name="Bookmarks_MenuRightClick">
					<MenuItem
						Header="Add bookmark"
						Name="AddBookmark_MenuRightClick"
						Click="AddBookmark_Click" />
					<MenuItem
						Header="Manage bookmarks"
						Name="ManageBookmarks_MenuRightClick"
						Click="ManageBookmarks_Click" />
					<Separator />
				</MenuItem>
				
                <MenuItem Header="About" Click="About_Click" />
                
                <MenuItem Header="Minimize" Click="Minimize_Click" />
                
				<MenuItem
					Header="Exit"
					Name="Exit_RightClick"
					InputGestureText="X"
					Click="Exit_Click" />
			</ContextMenu>
		</Grid.ContextMenu>
        

    </Grid>
</Window>