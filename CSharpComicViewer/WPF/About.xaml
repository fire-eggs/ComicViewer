<Window x:Class="CSharpComicViewer.WPF.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Height="340"
   Width="450" 
        Title="About" 
        Icon="/csharp-comicviewer;component/icon.ico" ResizeMode="NoResize" AllowsTransparency="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" Name="AboutWindow" Topmost="False">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Image Height="48" Name="Logo" Stretch="None" Width="48"  Source="/csharp-comicviewer;component/About.png"/>
            <TextBlock Text="{Binding Path=ProgramName}" Height="48" FontSize="28" Margin="10,0,0,0" />
        </StackPanel>
        <TextBlock Text="{Binding Path=Copyright}" Height="28" />
        <TextBlock Text="{Binding Path=Version}" Height="28" />
        <TextBlock>
            Github: <Hyperlink Click="Hyperlink_Click" NavigateUri="https://github.com/fire-eggs/ComicViewer">https://github.com/fire-eggs/ComicViewer</Hyperlink>
        </TextBlock>
        <TextBlock Height="28">
                Website: <Hyperlink Click="Hyperlink_Click" NavigateUri="http://csharpcomicview.sourceforge.net/">http://csharpcomicview.sourceforge.net/</Hyperlink>
        </TextBlock>
        <TextBox  Name="Description_TextBox" Height="100" IsReadOnly="True" IsEnabled="True" TextWrapping="WrapWithOverflow" Padding="0" />
        <Button Content="Close" Height="23" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Click="Close_Click" Margin="0,5,0,0" />
    </StackPanel>
</Window>
